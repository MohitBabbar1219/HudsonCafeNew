<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mydarkappfactory.hudsoncafe.SubmenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fragmentLayout"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_submenu"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tablayout_id"
            android:layout_below="@id/toolbar_submenu"
            android:background="@color/toolbarColor"
            app:tabMode="fixed"
            app:tabTextColor="@color/logoColor"
            app:tabSelectedTextColor="@color/textColor"
            app:tabGravity="fill" />

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager_submenu"
            android:layout_below="@id/tablayout_id" />

    </RelativeLayout>

</RelativeLayout>
